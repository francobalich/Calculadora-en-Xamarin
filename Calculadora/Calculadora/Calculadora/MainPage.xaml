<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.MainPage">

    <StackLayout Orientation="Vertical">

        <Label Text="Calculadora" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        <Entry Placeholder="Ingrese valor 1" x:Name="txtN1"/>
        <Entry Placeholder="Ingrese valor 2" x:Name="txtN2"/>
        <Label Text="Seleccione operacion" HorizontalOptions="Center" FontSize="Medium"/>
        <Picker x:Name="pkOper" SelectedIndexChanged="pkOper_SelectedIndexChanged"/>
        <Label Text="----" FontSize="Medium" x:Name="lblRes"/>

    </StackLayout>

</ContentPage>